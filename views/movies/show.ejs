<%- include('../partials/header.ejs') %>
<h2 class="page-header">
    <%= movie.title %>
</h2>
<div class="movie-details">

    <div>
        <img class="movie-cover" src="<%= movie.coverImagePath %> ">
        <div class="movie-details-btn-grid">
            <a class="btn btn-danger " href="/user/<%= user.postedBy.id %>/posts ">Other Posts</a>
                <a class="btn btn-primary movie-details-director-button"
                    href="/directors/<%= movie.director.id %> ">View Director</a> 
        </div>
    </div>
    <div class="movie-details-grid">
        <div class="movie-details-label">Movie name :</div>
        <div><%= movie.title %></div>
        <div class="movie-details-label">Director :</div>
        <div><%= movie.director.name %></div>
        <div class="movie-details-label">Release Date :</div>
        <div><%= movie.releaseDate.toDateString() %></div>
        <div class="movie-details-label">Run Time :</div>
        <div><%= movie.runTime %></div>
        <div class="movie-details-label">Description :</div>
        <div><%= movie.description %></div>
        <div class="movie-details-label">PostedBy :</div>
        <div><%= user.postedBy.name %> </div>
    </div>
</div>